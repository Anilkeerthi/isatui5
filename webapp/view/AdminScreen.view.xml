<mvc:View
    controllerName="com.isat.isatui5.controller.AdminScreen"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns:tnt="sap.tnt"
    xmlns="sap.m"
    xmlns:m="sap.m"
    xmlns:uxap="sap.uxap"
>
    <Page>
        <content>
            <uxap:ObjectPageLayout
                height="12%"
                id="BobjectPageLayout"
            >
                <uxap:headerTitle>
                    <uxap:ObjectPageDynamicHeaderTitle>
                        <uxap:expandedHeading>
                            <Toolbar>
                                <Button
                                    icon="sap-icon://home"
                                    press="backToDashBoard"
                                />
                                <Label text="Select the entity" />

                                <ComboBox
                                    id="entityComboBox"
                                    placeholder="All"
                                    change="onEntityChange"
                                >
                                    <core:ListItem
                                        key="CustomersData"
                                        text="Customers Data"
                                    />
                                    <core:ListItem
                                        key="ProjectsData"
                                        text="Projects Data"
                                    />
                                    <core:ListItem
                                        key="Users"
                                        text="Users"
                                    />
                                </ComboBox>
                            </Toolbar>
                        </uxap:expandedHeading>

                        <uxap:actions>
                            <m:Button
                                text="NEW"
                                press="onAdminButtonPress"
                            />
                            <m:Button
                                text="Import"
                                press="onClickImport"
                            />
                            <m:Button
                                text="Export"
                                press="onClick"
                            />
                        </uxap:actions>
                    </uxap:ObjectPageDynamicHeaderTitle>
                </uxap:headerTitle>
            </uxap:ObjectPageLayout>

            <!-- <Panel>
                <SearchField
                    width="auto"
                    class="searchFieldCustomWidth"
                    id="AsearchField"
                    placeholder="Search for entitys"
                >
                    <layoutData>
                        <OverflowToolbarLayoutData
                            priority="NeverOverflow"
                            group="1"
                        />
                    </layoutData>
                </SearchField>
            </Panel> -->
        </content>

        <VBox id="tablePlaceholder">
            <mvc:XMLView
                id="CustomerView"
                viewName="com.isat.isatui5.view.Tables.Customer"
                visible="false"
            />

              <mvc:XMLView
                id="UsersView"
                viewName="com.isat.isatui5.view.Tables.Users"
                visible="false"
            />
            <!-- Other views can also be added here if needed -->
        </VBox>


        <Dialog
        title="New Lead"
        class="sapUiResponsivePadding--header sapUiResponsivePadding--content sapUiResponsivePadding--footer"
    >
<VBox>
        <Label text="Auto ID" />
        <Input placeholder="Enter auto ID" />

        <Label text="Customer ID" />
        <Input placeholder="Enter customer ID" />

        <Label text="Description" />
        <Input placeholder="Enter description" />

        <Label text="Location" />
        <Input placeholder="Enter location" />

        <Label text="Name" />
        <Input placeholder="Enter name" />
    </VBox>

        <VBox>
        <Label text="Auto ID" />
        <Input placeholder="Enter auto ID" />

        <Label text="Description" />
        <Input placeholder="Enter description" />

        <Label text="Name" />
        <Input placeholder="Enter name" />

        <Label text="Project ID" />
        <Input placeholder="Enter project ID" />

        <Label text="Status" />
        <Input placeholder="Enter status" />
    </VBox>

     <VBox>
        <Label text="Active" />
        <Switch />

        <Label text="Auto ID" />
        <Input placeholder="Enter auto ID" />

        <Label text="Customer ID" />
        <Input placeholder="Enter customer ID" />

        <Label text="Email ID" />
        <Input placeholder="Enter email ID" />

        <Label text="Name" />
        <Input placeholder="Enter name" />

        <Label text="Role" />
        <Input placeholder="Enter role" />

        <Label text="User ID" />
        <Input placeholder="Enter user ID" />
    </VBox>
    
        
        <buttons>
            <Button
                text="Create"
                type="Accept"
                press="OnboardCustomer"
            />
            <Button
                text="Cancel"
                type="Reject"
                press="OnCancelPress"
            />
        </buttons>
    </Dialog>
    </Page>
</mvc:View>
