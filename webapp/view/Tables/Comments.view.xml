<mvc:View
    controllerName="com.isat.isatui5.controller.Tables.Comments"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns:tnt="sap.tnt"
    xmlns="sap.m"
    xmlns:m="sap.m"
    xmlns:uxap="sap.uxap"
>
    <mvc:content>
        <tnt:ToolHeader
            id="shellLikeToolHeaderComments"
            class="sapUiTinyMargin"
        >
            <SearchField
                width="auto"
                class="searchFieldCustomWidth"
                id="searchFieldComments"
                placeholder="Search here"
            >
                <layoutData>
                    <OverflowToolbarLayoutData
                        priority="NeverOverflow"
                        group="1"
                    />
                </layoutData>
            </SearchField>

            <ToolbarSpacer />
            <Button
                text="NEW"
                tooltip="New"
                press="onDDTypeNew"
            />
            <Button
                text="Import"
                tooltip="Import"
            />
            <Button
                text="Export"
                tooltip="Export"
            />
        </tnt:ToolHeader>

        <ToolbarSpacer />

        <Table
            id="idComments"
            inset="false"
            items="{
			path: 'jsonModel>/Comments'
		
		}"
        >
            <infoToolbar>
                <OverflowToolbar>
                    <Label text="DDType" />
                </OverflowToolbar>
            </infoToolbar>
            <columns>
                <Column width="12em">
                    <Text text="AutoID" />
                </Column>
                <Column
                    minScreenWidth="Tablet"
                    demandPopin="true"
                >
                    <Text text="Comment" />
                </Column>
                <Column
                    minScreenWidth="Tablet"
                    demandPopin="true"
                >
                    <Text text="Created By" />
                </Column>
                <Column
                    minScreenWidth="Tablet"
                    demandPopin="true"
                >
                    <Text text="Create Datetime" />
                </Column>
                <Column
                    minScreenWidth="Tablet"
                    demandPopin="true"
                >
                    <Text text="RefID" />
                </Column>
                <Column
                    minScreenWidth="Desktop"
                    demandPopin="true"
                    hAlign="Center"
                >
                    <Text text="Type" />
                </Column>
                <Column hAlign="Begin" width="12em">
                    <Text text="Actions" />
                </Column>
            </columns>
            <items>
                <ColumnListItem vAlign="Middle">
                    <cells>
                        <ObjectIdentifier text="{jsonModel>autoid}" />
                        <ObjectIdentifier text="{jsonModel>comment}" />
                        <ObjectIdentifier text="{jsonModel>created_by}" />
                         <ObjectIdentifier text="{jsonModel>created_datetime}" />
                        <ObjectIdentifier text="{jsonModel>refid}" />
                         <ObjectIdentifier text="{jsonModel>type}" />


                        <HBox class="ActionButtons">
                            <Button
                                type="Emphasized"
                                press=".onShowDetails"
                                icon="sap-icon://display"
                            />
                            <Button
                               type="Reject"
                                press="onDeleteDDType"
                                icon="sap-icon://delete"
                            />
                        </HBox>
                    </cells>
                </ColumnListItem>
            </items>
        </Table>

        <!-- Dialog Box for New -->

        <Dialog
            id="CommentsDialogNew"
            stretch="false"
            resizable="true"
            draggable="true"
            afterClose="onDialogClose"
        >
            <customHeader>
                <Toolbar>
                    <Title text="Add New DDType Data" />
                    <ToolbarSpacer />
                    <Button
                        icon="sap-icon://decline"
                        press="onCloseDialog"
                        tooltip="Close"
                    />
                </Toolbar>
            </customHeader>
            <content>
                <HBox class="adminScreenActions">
                    <VBox>
                        <Label
                            text="name:"
                            required="true"
                        />
                        <Input
                            value=""
                            id="CommentsName"
                        />
                    </VBox>
                </HBox>

                <HBox class="adminScreenActions">
                    <VBox>
                        <Label
                            text="description:"
                            required="true"
                        />
                        <Input
                            value=""
                            id="CommentsDescription"
                        />
                    </VBox>
                </HBox>
            </content>

            <beginButton>
                <Button
                    text="Save"
                    tooltip="Save"
                    press="onSaveDDTypeNew"
                />
            </beginButton>
            <endButton>
                <Button
                    text="Clear"
                    tooltip="Clear"
                    press="onClearDialog"
                />
            </endButton>
        </Dialog>

        <!-- Dialog Box for Actions -->

        <Dialog
            id="CommentsDialog"
            stretch="false"
            resizable="true"
            draggable="true"
            afterClose="onDialogClose"
        >
            <customHeader>
                <Toolbar>
                    <Title text="Interface details" />
                    <ToolbarSpacer />
                    <Button
                        icon="sap-icon://decline"
                        press="onCloseDialogAction"
                    />
                </Toolbar>
            </customHeader>
            <content>
                <HBox class="adminScreenActions">
                    <VBox>
                        <Label text="autoid :" />
                        <Input
                            value="{dialogModel>/autoid}"
                            editable="false"
                        />
                    </VBox>
                </HBox>

                <HBox class="adminScreenActions">
                    <VBox>
                        <Label text="description :" />
                        <Input
                            value="{dialogModel>/description}"
                            editable="{dialogModel>/editable}"
                        />
                    </VBox>
                </HBox>

                <HBox class="adminScreenActions">
                    <VBox>
                        <Label text="name" />
                        <Input
                            value="{dialogModel>/name}"
                            editable="{dialogModel>/editable}"
                        />
                    </VBox>
                </HBox>
            </content>

            <beginButton>
                <Button
                    text="{dialogModel>/buttonText}"
                    press="onToggleEdit"
                />
            </beginButton>
            <endButton>
                <Button
                    text="Delete"
                    press="onDeleteDDType"
                />
            </endButton>
        </Dialog>
    </mvc:content>
</mvc:View>
