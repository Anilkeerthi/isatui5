<mvc:View
    controllerName="com.isat.isatui5.controller.Tables.Customer"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns:tnt="sap.tnt"
    xmlns="sap.m"
    xmlns:m="sap.m"
    xmlns:uxap="sap.uxap"
>
   <mvc:content>
        <tnt:ToolHeader
            id="shellLikeToolHeaderCustomer"
            class="sapUiTinyMargin"
        >
            <SearchField
                width="auto"
                class="searchFieldCustomWidth"
                id="searchFieldCustomer"
                placeholder="Search here"
            >
                <layoutData>
                    <OverflowToolbarLayoutData
                        priority="NeverOverflow"
                        group="1"
                    />
                </layoutData>
            </SearchField>

            <ToolbarSpacer />
            <Button
                text="NEW"
                tooltip="New"
                press="onDDTypeNew"
            />
            <Button
                text="Import"
                tooltip="Import"
            />
            <Button
                text="Export"
                tooltip="Export"
            />
        </tnt:ToolHeader>

        <Table
            id="idProductssTable"
            inset="false"
            items="{
			path: 'jsonModel>/Customers'
		

		}">
		
		<infoToolbar>
			<OverflowToolbar>
				<Label text="Customer Data"/>
			</OverflowToolbar>
		</infoToolbar>
		<columns>
			<Column
				width="12em">
				<Text text="AutoID" />
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true">
				<Text text="CustID" />
			</Column>
			<Column
				minScreenWidth="Desktop"
				demandPopin="true"
				hAlign="Center">
				<Text text="Name" />
			</Column>
			<Column
				minScreenWidth="Desktop"
				demandPopin="true"
				hAlign="Center">
				<Text text="location" />
			</Column>
			<Column
				hAlign="Center">
				<Text text="Description" />
			</Column>
			<Column
				hAlign="Center">
				<Text text="Actions" />
			</Column>
		</columns>
		<items>
			<ColumnListItem vAlign="Middle">
				<cells>
					<ObjectIdentifier
						
						text="{jsonModel>autoid}"/>
					<Text
						text="{jsonModel>custid}" />
                        <Text
						text="{jsonModel>name}" />
						
						<Text
						text="{jsonModel>location}" />
                        <Text
						text="{jsonModel>description}" />
						
						 <Button type="Emphasized"
                           press=".onShowDetails"
                                        icon="sap-icon://display" />
					
					
					
				</cells>
			</ColumnListItem>
		</items>
	</Table>


        <Dialog
            id="CustomersDialogNew"
            stretch="false"
            resizable="true"
            draggable="true"
            afterClose="onDialogClose"
        >
            <customHeader>
                <Toolbar>
                    <Title text="Add New DDType Data" />
                    <ToolbarSpacer />
                    <Button
                        icon="sap-icon://decline"
                        press="onCloseDialog"
                        tooltip="Close"
                    />
                </Toolbar>
            </customHeader>
            <content>
                <HBox class="adminScreenActions">
                    <VBox>
                        <Label
                            text="name:"
                            required="true"
                        />
                        <Input
                            value=""
                            id="CustomersName"
                        />
                    </VBox>
                </HBox>

                <HBox class="adminScreenActions">
                    <VBox>
                        <Label
                            text="description:"
                            required="true"
                        />
                        <Input
                            value=""
                            id="CustomersDescription"
                        />
                    </VBox>
                </HBox>
            </content>

            <beginButton>
                <Button
                    text="Save"
                    tooltip="Save"
                    press="onSaveDDTypeNew"
                />
            </beginButton>
            <endButton>
                <Button
                    text="Clear"
                    tooltip="Clear"
                    press="onClearDialog"
                />
            </endButton>
        </Dialog>

        <!-- Dialog Box for Actions -->

        <Dialog
            id="CustomersDialog"
            stretch="false"
            resizable="true"
            draggable="true"
            afterClose="onDialogClose"
        >
            <customHeader>
                <Toolbar>
                    <Title text="Interface details" />
                    <ToolbarSpacer />
                    <Button
                        icon="sap-icon://decline"
                        press="onCloseDialogAction"
                    />
                </Toolbar>
            </customHeader>
            <content>
                <HBox class="adminScreenActions">
                    <VBox>
                        <Label text="autoid :" />
                        <Input
                            value="{dialogModel>/autoid}"
                            editable="false"
                        />
                    </VBox>
                </HBox>

                <HBox class="adminScreenActions">
                    <VBox>
                        <Label text="description :" />
                        <Input
                            value="{dialogModel>/description}"
                            editable="{dialogModel>/editable}"
                        />
                    </VBox>
                </HBox>

                <HBox class="adminScreenActions">
                    <VBox>
                        <Label text="name" />
                        <Input
                            value="{dialogModel>/name}"
                            editable="{dialogModel>/editable}"
                        />
                    </VBox>
                </HBox>
            </content>

            <beginButton>
                <Button
                    text="{dialogModel>/buttonText}"
                    press="onToggleEdit"
                />
            </beginButton>
            <endButton>
                <Button
                    text="Delete"
                    press="onDeleteDDType"
                />
            </endButton>
        </Dialog>
     </mvc:content>
</mvc:View>
