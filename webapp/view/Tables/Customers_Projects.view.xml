<mvc:View
    controllerName="com.isat.isatui5.controller.Tables.Customers_Projects"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns:tnt="sap.tnt"
    xmlns="sap.m"
    xmlns:m="sap.m"
    xmlns:uxap="sap.uxap"
>
    <mvc:content>
        <tnt:ToolHeader
            id="shellLikeToolHeaderCustomers_Projects"
            class="sapUiTinyMargin"
        >
            <SearchField
                width="auto"
                class="searchFieldCustomWidth"
                id="searchFieldCustomers_Projects"
                placeholder="Search here"
            >
                <layoutData>
                    <OverflowToolbarLayoutData
                        priority="NeverOverflow"
                        group="1"
                    />
                </layoutData>
            </SearchField>

            <ToolbarSpacer />
            <Button
                text="NEW"
                tooltip="New"
                press="onCustomer_ProjectNew"
            />
            <Button
                text="Import"
                tooltip="Import"
            />
            <Button
                text="Export"
                tooltip="Export"
            />
        </tnt:ToolHeader>

        <ToolbarSpacer />

        <Table
            id="idCustomers_Projects"
            inset="false"
            items="{
			path: 'jsonModel>/Customers_Projects'
		
		}"
        >
            <infoToolbar>
                <OverflowToolbar>
                    <Label text="Customers_Projects" />
                </OverflowToolbar>
            </infoToolbar>
            <columns>
                <Column width="12em">
                    <Text text="AutoID" />
                </Column>
                <Column
                    minScreenWidth="Tablet"
                    demandPopin="true"
                >
                    <Text text="Customer_Name" />
                </Column>
                <Column
                    minScreenWidth="Desktop"
                    demandPopin="true"
                    hAlign="Center"
                >
                    <Text text="Project_Name" />
                </Column>
                <Column hAlign="Begin" width="12em">
                    <Text text="Actions" />
                </Column>
            </columns>
            <items>
                <ColumnListItem vAlign="Middle">
                    <cells>
                        <ObjectIdentifier text="{jsonModel>autoid}" />
                        <ObjectIdentifier text="{jsonModel>customer_id/name}" />
                        <ObjectIdentifier text="{jsonModel>proj_id/name}" />

                     
                            <Button
                                type="Emphasized"
                                press=".onShowDetails"
                                icon="sap-icon://display"
                            />
                          
                      
                    </cells>
                </ColumnListItem>
            </items>
        </Table>

        <!-- Dialog Box for New -->

        <Dialog
            id="Customers_ProjectsDialogNew"
            stretch="false"
            resizable="true"
            draggable="true"
            afterClose="onDialogClose"
        >
            <customHeader>
                <Toolbar>
                    <Title text="Add New DDType Data" />
                    <ToolbarSpacer />
                    <Button
                        icon="sap-icon://decline"
                        press="onCloseCustomers_ProjectsDialogNew"
                        tooltip="Close"
                    />
                </Toolbar>
            </customHeader>
            <content>
                <HBox class="adminScreenActions">
                    <VBox>
                        <Label
                            text="Tasklist_Name:"
                            required="true"
                        />
                         <ComboBox
                            id="CustomersDialogNewComboBox"
                            change="onTasksDialogNewComboBox"
                            placeholder="All"
                            width="100%"
                            items="{
					        
                                     path: 'jsonModel>/Customers'
					
				                    }"
                        >
                            <core:Item
                                key="{jsonModel>autoid}"
                                text="{jsonModel>name}"
                            />
                        </ComboBox>
                    </VBox>
                </HBox>

                <HBox class="adminScreenActions">
                    <VBox>
                        <Label
                            text="Stage_Name:"
                            required="true"
                        />
                         <ComboBox
                            id="ProjectsDialogNewComboBox"
                            change="onTasksDialogNewComboBox"
                            placeholder="All"
                            width="100%"
                            items="{
					        
                                     path: 'jsonModel>/Projects'
					
				                    }"
                        >
                            <core:Item
                                key="{jsonModel>autoid}"
                                text="{jsonModel>name}"
                            />
                        </ComboBox>
                    </VBox>
                </HBox>
            </content>

            <beginButton>
                <Button
                    text="Save"
                    tooltip="Save"
                    press="onSaveCustomers_ProjectsDialogNew"
                />
            </beginButton>
            <endButton>
                <Button
                    text="Clear"
                    tooltip="Clear"
                    press="onClearaveCustomers_ProjectsDialogNew"
                />
            </endButton>
        </Dialog>

        <!-- Dialog Box for Actions -->

        <Dialog
            id="Customers_ProjectsDialog"
            stretch="false"
            resizable="true"
            draggable="true"
            afterClose="onDialogClose"
        >
            <customHeader>
                <Toolbar>
                    <Title text="Interface details" />
                    <ToolbarSpacer />
                    <Button
                        icon="sap-icon://decline"
                        press="onCloseDialogAction"
                    />
                </Toolbar>
            </customHeader>
            <content>
                <HBox class="adminScreenActions">
                    <VBox>
                        <Label text="autoid :" />
                        <Input
                            value="{dialogModel>/autoid}"
                            editable="false"
                        />
                    </VBox>
                </HBox>

                <HBox class="adminScreenActions">
                    <VBox>
                        <Label text="description :" />
                        <Input
                            value="{dialogModel>/description}"
                            editable="{dialogModel>/editable}"
                        />
                    </VBox>
                </HBox>

                <HBox class="adminScreenActions">
                    <VBox>
                        <Label text="name" />
                        <Input
                            value="{dialogModel>/name}"
                            editable="{dialogModel>/editable}"
                        />
                    </VBox>
                </HBox>
            </content>

            <beginButton>
                <Button
                    text="{dialogModel>/buttonText}"
                    press="onToggleEdit"
                />
            </beginButton>
            <endButton>
                <Button
                    text="Delete"
                    press="onDeleteDDType"
                />
            </endButton>
        </Dialog>
    </mvc:content>
</mvc:View>
