<mvc:View
    controllerName="com.isat.isatui5.controller.Tables.Interface_Details"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns:tnt="sap.tnt"
    xmlns="sap.m"
    xmlns:m="sap.m"
    xmlns:uxap="sap.uxap"
>
    <mvc:content>
        <tnt:ToolHeader
            id="shellLikeToolHeaderInterface_Details"
            class="sapUiTinyMargin"
        >
            <SearchField
                width="auto"
                class="searchFieldCustomWidth"
                id="searchFieldInterface_Details"
                placeholder="Search here"
            >
                <layoutData>
                    <OverflowToolbarLayoutData
                        priority="NeverOverflow"
                        group="1"
                    />
                </layoutData>
            </SearchField>

            <ToolbarSpacer />
            <Button
                text="NEW"
                tooltip="New"
                press="onDDTypeNew"
            />
            <Button
                text="Import"
                tooltip="Import"
            />
            <Button
                text="Export"
                tooltip="Export"
            />
        </tnt:ToolHeader>

        <ToolbarSpacer />

        <Table
            id="idInterface_Details"
            inset="false"
            items="{
			path: 'jsonModel>/InterfaceDetails'
		
		}"
        >
            <infoToolbar>
                <OverflowToolbar>
                    <Label text="Interface_Details" />
                </OverflowToolbar>
            </infoToolbar>
            <columns>
                <Column width="12em">
                    <Text text="AutoID" />
                </Column>
                <Column
                    minScreenWidth="Tablet"
                    demandPopin="true"
                >
                    <Text text="Business POC" />
                </Column>

                <Column
                    minScreenWidth="Tablet"
                    demandPopin="true"
                >
                    <Text text="CC Enabled" />
                </Column>

                <Column
                    minScreenWidth="Tablet"
                    demandPopin="true"
                >
                    <Text text="Description" />
                </Column>

                <Column
                    minScreenWidth="Tablet"
                    demandPopin="true"
                >
                    <Text text="Doctype" />
                </Column>

                <Column
                    minScreenWidth="Tablet"
                    demandPopin="true"
                >
                    <Text text="Frequency" />
                </Column>

                <Column
                    minScreenWidth="Tablet"
                    demandPopin="true"
                >
                    <Text text="Functional POC" />
                </Column>

                <Column
                    minScreenWidth="Tablet"
                    demandPopin="true"
                >
                    <Text text="Module" />
                </Column>

                <Column
                    minScreenWidth="Tablet"
                    demandPopin="true"
                >
                    <Text text="Name" />
                </Column>

                <Column
                    minScreenWidth="Tablet"
                    demandPopin="true"
                >
                    <Text text="Package" />
                </Column>

                <Column
                    minScreenWidth="Tablet"
                    demandPopin="true"
                >
                    <Text text="Process" />
                </Column>

                <Column
                    minScreenWidth="Tablet"
                    demandPopin="true"
                >
                    <Text text="Receiver System" />
                </Column>

                <Column
                    minScreenWidth="Tablet"
                    demandPopin="true"
                >
                    <Text text="Senders System" />
                </Column>

                <Column
                    minScreenWidth="Tablet"
                    demandPopin="true"
                >
                    <Text text="Source Adapter" />
                </Column>

                <Column
                    minScreenWidth="Tablet"
                    demandPopin="true"
                >
                    <Text text="Target Adapter" />
                </Column>

                <Column
                    minScreenWidth="Tablet"
                    demandPopin="true"
                >
                    <Text text="Tech POC" />
                </Column>

                <Column
                    hAlign="Begin"
                    width="12em"
                >
                    <Text text="Actions" />
                </Column>
            </columns>
            <items>
                <ColumnListItem vAlign="Middle">
                    <cells>
                        <ObjectIdentifier text="{jsonModel>autoid}" />
                        <ObjectIdentifier text="{jsonModel>businesspoc}" />
                        <ObjectIdentifier text="{jsonModel>ccenabled}" />
                        <ObjectIdentifier text="{jsonModel>description}" />
                        <ObjectIdentifier text="{jsonModel>doctype}" />
                        <ObjectIdentifier text="{jsonModel>frequency}" />

                        <ObjectIdentifier text="{jsonModel>functionalpoc}" />
                        <ObjectIdentifier text="{jsonModel>module}" />
                        <ObjectIdentifier text="{jsonModel>name}" />

                        <ObjectIdentifier text="{jsonModel>package}" />
                        <ObjectIdentifier text="{jsonModel>process}" />
                        <ObjectIdentifier text="{jsonModel>receiversystem}" />

                         <ObjectIdentifier text="{jsonModel>senderssystem}" />
                        <ObjectIdentifier text="{jsonModel>sourceadapter}" />
                        <ObjectIdentifier text="{jsonModel>targetadapter}" />

                        <ObjectIdentifier text="{jsonModel>techpoc}" />


                        <HBox class="ActionButtons">
                            <Button
                                type="Emphasized"
                                press=".onShowDetails"
                                icon="sap-icon://display"
                            />
                            <Button
                                type="Reject"
                                press="onDeleteDDType"
                                icon="sap-icon://delete"
                            />
                        </HBox>
                    </cells>
                </ColumnListItem>
            </items>
        </Table>

        <!-- Dialog Box for New -->

        <Dialog
            id="Interface_DetailsDialogNew"
            stretch="false"
            resizable="true"
            draggable="true"
            afterClose="onDialogClose"
        >
            <customHeader>
                <Toolbar>
                    <Title text="Add New DDType Data" />
                    <ToolbarSpacer />
                    <Button
                        icon="sap-icon://decline"
                        press="onCloseDialog"
                        tooltip="Close"
                    />
                </Toolbar>
            </customHeader>
            <content>
                <HBox class="adminScreenActions">
                    <VBox>
                        <Label
                            text="name:"
                            required="true"
                        />
                        <Input
                            value=""
                            id="Interface_DetailsName"
                        />
                    </VBox>
                </HBox>

                <HBox class="adminScreenActions">
                    <VBox>
                        <Label
                            text="description:"
                            required="true"
                        />
                        <Input
                            value=""
                            id="Interface_DetailsDescription"
                        />
                    </VBox>
                </HBox>
            </content>

            <beginButton>
                <Button
                    text="Save"
                    tooltip="Save"
                    press="onSaveDDTypeNew"
                />
            </beginButton>
            <endButton>
                <Button
                    text="Clear"
                    tooltip="Clear"
                    press="onClearDialog"
                />
            </endButton>
        </Dialog>

        <!-- Dialog Box for Actions -->

        <Dialog
            id="Interface_DetailsDialog"
            stretch="false"
            resizable="true"
            draggable="true"
            afterClose="onDialogClose"
        >
            <customHeader>
                <Toolbar>
                    <Title text="Interface details" />
                    <ToolbarSpacer />
                    <Button
                        icon="sap-icon://decline"
                        press="onCloseDialogAction"
                    />
                </Toolbar>
            </customHeader>
            <content>
                <HBox class="adminScreenActions">
                    <VBox>
                        <Label text="autoid :" />
                        <Input
                            value="{dialogModel>/autoid}"
                            editable="false"
                        />
                    </VBox>
                </HBox>

                <HBox class="adminScreenActions">
                    <VBox>
                        <Label text="description :" />
                        <Input
                            value="{dialogModel>/description}"
                            editable="{dialogModel>/editable}"
                        />
                    </VBox>
                </HBox>

                <HBox class="adminScreenActions">
                    <VBox>
                        <Label text="name" />
                        <Input
                            value="{dialogModel>/name}"
                            editable="{dialogModel>/editable}"
                        />
                    </VBox>
                </HBox>
            </content>

            <beginButton>
                <Button
                    text="{dialogModel>/buttonText}"
                    press="onToggleEdit"
                />
            </beginButton>
            <endButton>
                <Button
                    text="Delete"
                    press="onDeleteDDType"
                />
            </endButton>
        </Dialog>
    </mvc:content>
</mvc:View>
