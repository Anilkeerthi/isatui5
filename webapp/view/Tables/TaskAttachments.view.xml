<mvc:View
    controllerName="com.isat.isatui5.controller.Tables.TaskAttachments"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns:tnt="sap.tnt"
    xmlns="sap.m"
    xmlns:m="sap.m"
    xmlns:uxap="sap.uxap"
>
    <mvc:content>
        <tnt:ToolHeader
            id="shellLikeToolHeaderTaskAttachments"
            class="sapUiTinyMargin"
        >
            <SearchField
                width="auto"
                class="searchFieldCustomWidth"
                id="searchFieldTaskAttachments"
                placeholder="Search here"
            >
                <layoutData>
                    <OverflowToolbarLayoutData
                        priority="NeverOverflow"
                        group="1"
                    />
                </layoutData>
            </SearchField>

            <ToolbarSpacer />
            <Button
                text="NEW"
                tooltip="New"
                press="onTaskAttachmentsNew"
            />
            <Button
                text="Import"
                tooltip="Import"
            />
            <Button
                text="Export"
                tooltip="Export"
            />
        </tnt:ToolHeader>

        <ToolbarSpacer />

        <Table
            id="idTaskAttachments"
            inset="false"
            items="{
			path: 'jsonModel>/TaskAttachments'
		
		}"
        >
            <infoToolbar>
                <OverflowToolbar>
                    <Label text="TaskAttachments" />
                </OverflowToolbar>
            </infoToolbar>
            <columns>
                <Column width="12em">
                    <Text text="AutoID" />
                </Column>
                <Column
                    minScreenWidth="Tablet"
                    demandPopin="true"
                >
                    <Text text="Name" />
                </Column>

                <Column
                    minScreenWidth="Tablet"
                    demandPopin="true"
                >
                    <Text text="Type" />
                </Column>

                <Column
                    minScreenWidth="Tablet"
                    demandPopin="true"
                >
                    <Text text="AttachmentURL" />
                </Column>


                <Column
                    minScreenWidth="Desktop"
                    demandPopin="true"
                    hAlign="Center"
                >
                    <Text text="TaskID_TaskName" />
                </Column>
                <Column
                    hAlign="Begin"
                    width="12em"
                >
                    <Text text="Actions" />
                </Column>
            </columns>
            <items>
                <ColumnListItem vAlign="Middle">
                    <cells>
                        <ObjectIdentifier text="{jsonModel>autoid}" />
                        <ObjectIdentifier text="{jsonModel>name}" />
                        <ObjectIdentifier text="{jsonModel>type}" />
                         <ObjectIdentifier text="{jsonModel>attachmenturl}" />
                        <ObjectIdentifier text="{jsonModel>task_id/name}" />

    
                            <Button
                                type="Emphasized"
                                press=".onShowDetails"
                                icon="sap-icon://display"
                            />
                       
                    </cells>
                </ColumnListItem>
            </items>
        </Table>

        <!-- Dialog Box for New -->

        <Dialog
            id="TaskAttachmentsDialogNew"
            stretch="false"
            resizable="true"
            draggable="true"
            afterClose="onDialogClose"
        >
            <customHeader>
                <Toolbar>
                    <Title text="Add New TaskAttachments Data" />
                    <ToolbarSpacer />
                    <Button
                        icon="sap-icon://decline"
                        press="onCloseDialog"
                        tooltip="Close"
                    />
                </Toolbar>
            </customHeader>
            <content>
                <HBox class="adminScreenActions">
                    <VBox>
                        <Label
                            text="Name:"
                            required="true"
                        />
                        <Input
                            value=""
                            id="TaskAttachmentsName"
                        />
                    </VBox>

                    <VBox>
                        <Label
                            text="Type:"
                            required="true"
                        />
                        <Input
                            value=""
                            id="TaskAttachmentsType"
                        />
                    </VBox>
                </HBox>

                   <HBox class="adminScreenActions">

                              <VBox>
                        <Label
                            text="AttachmentURL:"
                            required="true"
                        />
                        <Input
                            value=""
                            id="TaskAttachmentsAttachmentURL"
                        />
                    </VBox>

                        <VBox>
                    <Label
                            text="Tasks_Name"
                            required="true"/>
                      <ComboBox
                            id="TaskAttachmentsDialogNewComboBox"
                            change="onUsers_RolesDialogNewComboBox"
                            placeholder="All"
                            width="100%"
                            items="{
                                     path: 'jsonModel>/Tasks'
                   
                                    }"
                        >
                            <core:Item
                                key="{jsonModel>autoid}"
                                text="{jsonModel>name}"
                            />
                        </ComboBox>
                    </VBox>
                </HBox>

              
            </content>

            <beginButton>
                <Button
                    text="Save"
                    tooltip="Save"
                    press="onSaveTaskAttachmentsNew"
                />
            </beginButton>
            <endButton>
                <Button
                    text="Clear"
                    tooltip="Clear"
                    press="onClearDialog"
                />
            </endButton>
        </Dialog>

        <!-- Dialog Box for Actions -->

        <Dialog
            id="TaskAttachmentsDialog"
            stretch="false"
            resizable="true"
            draggable="true"
            afterClose="onDialogClose"
        >
            <customHeader>
                <Toolbar>
                    <Title text="TaskAttachments Details" />
                    <ToolbarSpacer />
                    <Button
                        icon="sap-icon://decline"
                        press="onCloseDialogAction"
                    />
                </Toolbar>
            </customHeader>
            <content>
                <HBox class="adminScreenActions">
                    <VBox>
                        <Label text="AutoID:" />
                        <Input
                            value="{dialogModel>/autoid}"
                            editable="false"
                        />
                    </VBox>

                      <VBox>
                        <Label text="Name:" />
                        <Input
                            value="{dialogModel>/name}"
                             editable="{dialogModel>/editable}"
                        />
                    </VBox>
                </HBox>

                <HBox class="adminScreenActions">
                    <VBox>
                        <Label text="Type:" />
                        <Input
                            value="{dialogModel>/type}"
                            editable="{dialogModel>/editable}"
                        />
                    </VBox>
                    <VBox>
                        <Label text="AttachmentURL:" />
                        <Input
                            value="{dialogModel>/attachmenturl}"
                            editable="{dialogModel>/editable}"
                        />
                    </VBox>
                </HBox>

                  <HBox class="adminScreenActions">
                  
                    <VBox>
                        <Label text="TaskID_Name:" />
                        <Input
                            value="{dialogModel>/task_id_autoid}"
                            editable="{dialogModel>/editable}"
                        />
                    </VBox>
                </HBox>

                
            </content>

             <beginButton>
                <Button
                  text="{dialogModel>/buttonText}"
                    press="onToggleEdit"
                />
            </beginButton>
            <endButton>
               <Button
                     text="{dialogModel>/deleteButtonText}"
                    press="onDeletePress"
                />
            </endButton>
        </Dialog>
    </mvc:content>
</mvc:View>
