<mvc:View
    controllerName="com.isat.isatui5.controller.Tables.Teams_Users"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns:tnt="sap.tnt"
    xmlns="sap.m"
    xmlns:m="sap.m"
    xmlns:uxap="sap.uxap"
>
    <mvc:content>
        <tnt:ToolHeader
            id="shellLikeToolHeaderTeams_Users"
            class="sapUiTinyMargin"
        >
            <SearchField
                width="auto"
                class="searchFieldCustomWidth"
                id="searchFieldTeams_Users"
                placeholder="Search here"
            >
                <layoutData>
                    <OverflowToolbarLayoutData
                        priority="NeverOverflow"
                        group="1"
                    />
                </layoutData>
            </SearchField>

            <ToolbarSpacer />
            <Button
                text="NEW"
                tooltip="New"
                press="onTeams_UsersNew"
            />
            <Button
                text="Import"
                tooltip="Import"
            />
            <Button
                text="Export"
                tooltip="Export"
            />
        </tnt:ToolHeader>

        <ToolbarSpacer />

        <Table
            id="idTeams_Users"
            inset="false"
            items="{
			path: 'jsonModel>/Teams_Users'
		
		}"
        >
            <infoToolbar>
                <OverflowToolbar>
                    <Label text="Teams_Users Data" />
                </OverflowToolbar>
            </infoToolbar>
            <columns>
                <Column width="12em">
                    <Text text="AutoID" />
                </Column>

                 <Column
                    minScreenWidth="Tablet"
                    demandPopin="true"
                >
                    <Text text="Team Name" />
                </Column>

                <Column
                    minScreenWidth="Tablet"
                    demandPopin="true"
                >
                    <Text text="User Name" />
                </Column>

                 
                <Column
                    minScreenWidth="Desktop"
                    demandPopin="true"
                    hAlign="Center"
                >
                    <Text text="Active" />
                </Column>
                <Column hAlign="Begin" width="12em">
                    <Text text="Actions" />
                </Column>
            </columns>
            <items>
                <ColumnListItem vAlign="Middle">
                    <cells>
                        <ObjectIdentifier text="{jsonModel>autoid}" />
                        <ObjectIdentifier text="{jsonModel>team_id/name}" />
                        <ObjectIdentifier text="{jsonModel>user_id/name}" />
                         <ObjectIdentifier text="{jsonModel>active}" />

                      
                            <Button
                                type="Emphasized"
                                press=".onShowTeams_UsersDetails"
                                icon="sap-icon://display"
                            />
                          
                  
                    </cells>
                </ColumnListItem>
            </items>
        </Table>

        <!-- Dialog Box for New -->

        <Dialog
            id="Teams_UsersDialogNew"
            stretch="false"
            resizable="true"
            draggable="true"
            afterClose="onDialogClose"
        >
            <customHeader>
                <Toolbar>
                    <Title text="Add New Teams_Users Data" />
                    <ToolbarSpacer />
                    <Button
                        icon="sap-icon://decline"
                        press="onCloseTeams_UsersDialogNew"
                        tooltip="Close"
                    />
                </Toolbar>
            </customHeader>
            <content>
                <HBox class="adminScreenActions">
                     <VBox>
                        <Label
                            text="Tasklist_Name:"
                            required="true"
                        />
                         <ComboBox
                            id="TeamsDialogNewComboBox"
                            change="onTasksDialogNewComboBox"
                            placeholder="All"
                            width="100%"
                            items="{
					        
                                     path: 'jsonModel>/Teams'
					
				                    }"
                        >
                            <core:Item
                                key="{jsonModel>autoid}"
                                text="{jsonModel>name}"
                            />
                        </ComboBox>
                    </VBox>

                     <VBox>
                        <Label
                            text="Stage_Name:"
                            required="true"
                        />
                         <ComboBox
                            id="UsersDialogNewComboBox"
                            change="onTasksDialogNewComboBox"
                            placeholder="All"
                            width="100%"
                            items="{
					        
                                     path: 'jsonModel>/Users'
					
				                    }"
                        >
                            <core:Item
                                key="{jsonModel>autoid}"
                                text="{jsonModel>name}"
                            />
                        </ComboBox>
                    </VBox>

                </HBox>

                <HBox class="adminScreenActions">
                    <VBox>
                        <Label
                            text="active:"
                            required="true"
                        />
                        <Input
                            value=""
                            id="Teams_UsersActive"
                        />
                    </VBox>
                </HBox>
            </content>

            <beginButton>
                <Button
                    text="Save"
                    tooltip="Save"
                    press="onSaveTeams_UsersDialogNew"
                />
            </beginButton>
            <endButton>
                <Button
                    text="Clear"
                    tooltip="Clear"
                    press="onClearTeams_UsersDialogNew"
                />
            </endButton>
        </Dialog>

        <!-- Dialog Box for Actions -->

        <Dialog
            id="Teams_UsersDialog"
            stretch="false"
            resizable="true"
            draggable="true"
            afterClose="onDialogClose"
        >
            <customHeader>
                <Toolbar>
                    <Title text="Interface details" />
                    <ToolbarSpacer />
                    <Button
                        icon="sap-icon://decline"
                        press="onCloseTeams_UsersDialog"
                    />
                </Toolbar>
            </customHeader>
            <content>
                <HBox class="adminScreenActions">
                    <VBox>
                        <Label text="Team Name :" />
                        <Input
                            value="{dialogModel>/team_id/name}"
                            editable="false"
                        />
                    </VBox>

                    <VBox>
                        <Label text="User Name :" />
                        <Input
                            value="{dialogModel>/user_id/name}"
                            editable="false"
                        />
                    </VBox>
                </HBox>

                <HBox class="adminScreenActions">

                <VBox>
                        <Label text="Active :" />
                        <Input
                            value="{dialogModel>/active}"
                             editable="{dialogModel>/editable}"
                        />
                    </VBox>
                    
                </HBox>

               
            </content>

            <beginButton>
                <Button
                    text="{dialogModel>/buttonText}"
                    press="onToggleEdit"
                />
            </beginButton>
            <endButton>
                <Button
                    text="{dialogModel>/deleteButtonText}"
                    press="onDeleteCustomers_ProjectsDialog"
                />
            </endButton>
                    </Dialog>
    </mvc:content>
</mvc:View>
